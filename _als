#compdef als

_als () {
    if [ -z "$PREFIX" ]; then
        compadd -S '' $(_adb_ls_with_slash)
    else
        case $PREFIX in
            */*) pure_folder_prefix="${PREFIX%/*}/" ;;
            *)   pure_folder_prefix=""
        esac
        compadd -S '' -p "${pure_folder_prefix}" $(_adb_ls_with_slash ${pure_folder_prefix})
    fi
}

_als "$@"
